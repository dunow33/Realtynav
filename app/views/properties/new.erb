<% if flash.has?(:errors) %>
  <%= flash[:errors] %>
<% else %>
  <%= flash[:message] %>
<% end %>

<h1>List a Property</h1>
<form action="/properties" method="post">
  <label>Price</label>
  <input class="form-control form-control-sm" type="integer" name="property[price]">
  <label>Street Address</label>
  <input class="form-control form-control-sm" type="text" name="property[str_address]">
  <label>City</label>
  <input class="form-control form-control-sm" type="text" name="property[city]">
  <label>State</label>
  <input class="form-control form-control-sm" type="text" name="property[state]">
  <label>Zip Code</label>
  <input class="form-control form-control-sm" type="integer" name="property[zip_code]">
  <label>Image URL</label>
  <input class="form-control form-control-sm" type="text" name="image1[image_url]">
  <input class="form-control form-control-sm" type="text" name="image2[image_url]">
  <input class="form-control form-control-sm" type="text" name="image3[image_url]">

  <Button class="btn btn-primary" type="submit">List Property</button>
</form>

